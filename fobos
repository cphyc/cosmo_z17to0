[modes]
modes=dist dist-no-parallel debug gnu

[common-variables]
$cflags=-c -i4 -r8
$lflags= -parallel

[template-dir]
mod_dir=./mod/
build_dir=./build/
exec_dir=./bin/

[gnu]
templte=template-dir
compiler=gnu
cflags=-c

[dist-no-parallel]
template=template-dir
help=Compile for running
compiler=intel
cflags=$cflags -DBIG_RUN -Ofast -fast -free -cpp -qopenmp-stubs -xHost
lflags=$lflags -qopenmp-stubs
jobs=4

[dist]
template=template-dir
help=Compile for running
compiler=intel
cflags=$cflags -DBIG_RUN -Ofast -fast -free -cpp -qopenmp -xHost -parallel
lflags=$lflags -qopenmp -parallel
jobs=4

[debug]
template=template-dir
1help=Compile for debugging
compiler=intel
cflags=$cflags -O0 -fno-alias -fno-fnalias  -g -debug -traceback -check all  -implicitnone -warn all -fpe0 -fp-stack-check -ftrapuv -heap-arrays -gen-interface -warn interface -fp-stack-check -ftrapu
lflags=$lflags -g -O0 -debug