[modes]
modes		=dist dist-no-parallel debug

[common-variables]
$cflags		=-c -i4 -r8 -gen-interfaces -warn interfaces -std15 -lfftw3 -L/softs/fftw/3.3.4-pureintel/lib -I/softs/fftw/3.3.4-pureintel/include
$lflags		=-std15 -fPIC -lfftw3 -L/softs/fftw/3.3.4-pureintel/lib

[template-dir]
mod_dir		=./mod/
build_dir	=./build/
exec_dir	=./bin/

[template-dist-dir]
mod_dir		=./mod/
build_dir	=./dist/
exec_dir	=./bin/

[template-dist-no-p-dir]
mod_dir		=./mod/
build_dir	=./dist-no-p/
exec_dir	=./bin/

[dist-no-parallel]
template	=template-dist-no-p-dir
help		=Compile for running
compiler	=intel
cflags		=$cflags -DBIG_RUN -Ofast -fp-model fast=2 -static -free -cpp -traceback -fPIC
lflags		=$lflags -traceback
jobs		=4

[dist]
template	=template-dist-dir
help		=Compile for running
compiler	=intel
cflags		=$cflags -DBIG_RUN -Ofast -fp-model fast=2 -static -free -cpp -qopenmp -parallel
lflags		=$lflags -qopenmp -parallel
jobs		=4

[debug]
template	=template-dir
1help		=Compile for debugging
compiler	=intel
cflags		=$cflags -O0 -fno-alias -fno-fnalias -implicitnone -warn all -fp-stack-check -ftrapuv -heap-arrays -gen-interface -warn interface -fp-stack-check -ftrapu -qopenmp-stubs -g -check all -fpe0 -traceback -debug extended
lflags		=$lflags -g -O0 -debug -g -check all -fpe0 -warn -traceback -debug extended
