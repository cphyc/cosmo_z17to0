[modes]
modes=dist dist-no-parallel debug

[common-variables]
$cflags=-c
$lflags= -parallel

[template-dir]
mod_dir=./mod/
build_dir=./build/
exec_dir=./bin/

[dist-no-parallel]
template=template-dir
help=Compile for running
compiler=intel
cflags=$cflags -DBIG_RUN -Ofast -fast -free -cpp -xHost
lflags=$lflags -mkl=sequential
jobs=4

[dist]
template=template-dir
help=Compile for running
compiler=intel
cflags=$cflags -DBIG_RUN -Ofast -fast -free -cpp -openmp -xHost -parallel
lflags=$lflags -mkl=parallel -openmp -parallel
jobs=4

[debug]
template=template-dir
help=Compile for debugging
compiler=intel
cflags=$cflags -i4 -r8 -O0 -fno-alias -fno-fnalias  -g -debug -traceback -check all  -implicitnone -warn all -fpe0 -fp-stack-check -ftrapuv -heap-arrays -gen-interface -warn interface -fp-stack-check -ftrapu -qopenmp-stubs
lflags=$lflags -mkl=sequential