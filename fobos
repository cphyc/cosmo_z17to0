[modes]
modes		=dist dist-no-parallel debug

[common-variables]
$cflags		=-c -i4 -r8 -gen-interfaces -warn interfaces -std15 -check bounds -check pointers -traceback -I/softs/intel/compilers_and_libraries_2016.3.210/linux/mkl/include  -Itools/extrema/include -I/softs/intel/compilers_and_libraries_2016.3.210/linux/mkl/include -mkl=sequential -check arg_temp_created -I/softs/intel/mkl/include/fftw
$lflags		=-std15 -fPIC -mkl=sequential

[template-dir]
mod_dir		=./mod/
build_dir	=./build/
exec_dir	=./bin/

[template-dist-dir]
mod_dir		=./mod/
build_dir	=./dist/
exec_dir	=./bin/

[template-dist-no-p-dir]
mod_dir		=./mod/
build_dir	=./dist-no-p/
exec_dir	=./bin/

[dist-no-parallel]
template	=template-dist-no-p-dir
help		=Compile for running
compiler	=intel
cflags		=$cflags -DBIG_RUN -Ofast -fp-model fast=2 -static -free -cpp -traceback -fPIC
lflags		=$lflags -traceback
jobs		=4

[dist]
template	=template-dist-dir
help		=Compile for running
compiler	=intel
cflags		=$cflags -DBIG_RUN -Ofast -fp-model fast=2 -static -free -cpp -qopenmp -parallel -fPIC -g -p
lflags		=$lflags -qopenmp -parallel -g -p
jobs		=4

[debug]
template	=template-dir
1help		=Compile for debugging
compiler	=intel
cflags		=$cflags -O0 -fno-alias -fno-fnalias -implicitnone -warn all -fp-stack-check -ftrapuv -heap-arrays -gen-interface -warn interface -fp-stack-check -ftrapu -qopenmp-stubs -g -check all -fpe0 -debug extended -fPIC -p -g
lflags		=$lflags -g -O0 -debug -g -check all -fpe0 -warn -traceback -debug extended -p -qopenmp-stubs
